{
  "name": "finance-tracker",
  "version": "1.0.0",
  "description": "Personal finance tracker with premium design",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "cd client && npm run build",
    "start": "NODE_ENV=production node server/index.js",
    "deploy": "npm run build && npm start",
    "pm2:start": "npm run build && pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop finance-tracker",
    "pm2:restart": "pm2 restart finance-tracker",
    "pm2:logs": "pm2 logs finance-tracker",
    "pm2:status": "pm2 status"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}